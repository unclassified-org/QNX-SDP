<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0.0"
        id="Home">
    <name>Home</name>
    <author>QNX</author>
    <description>Home Application</description>
	<rim:category name="system"/>
    <icon src="icon.png"/>
    <content src="index.html"/>
	<rim:permissions>  
        <rim:permit>access_shared</rim:permit>
        <rim:permit>access_internet</rim:permit>
        <rim:permit>read_geolocation</rim:permit>
        <rim:permit>access_location_services</rim:permit>
	</rim:permissions>
	 
	<access uri="file:///" />
	<access uri="*" />
	<access uri="https://virtualearth.net" subdomains="true" />
	<access uri="http://pelmorex.com" subdomains="true" />
	
	<feature id="blackberry.event" required="true" version="1.0.0"/>
	<feature id="qnx.audioplayer" required="true" version="1.0.0"/>
	<feature id="qnx.mediasource" required="true" version="1.0.0"/>
	<feature id="qnx.medialibrary" required="true" version="1.0.0"/>
	<feature id="qnx.message" required="true" version="1.0.0"/>
	<feature id="qnx.application.event" required="true" version="1.0.0.0"/>
	<feature id="qnx.settings" required="true" version="1.0.0.0"/>
	<feature id="car.mediaplayer" required="true" version="1.0.0"/>
	<feature id="car.theme" required="true" version="1.0.0.0"/>
	<feature id="car.navigation" required="true" version="1.0.0"/>
</widget>
