<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0.0"
        id="MediaPlayer">  
    <name>Old Media Player</name>
    <author>QNX</author>
    <description>Car Media Player Application</description>
    <icon src="icon.png"/>
    <content src="index.html"/>    
    <rim:permissions>  
        <rim:permit>access_shared</rim:permit>
		<rim:permit>access_internet</rim:permit>
		<rim:permit>run_native</rim:permit>
    </rim:permissions>
	<rim:category name="system"/>
	<access uri="*" />
	<access uri="file:///" />
	<access uri="http://savagebeast.com" subdomains="true" />
	<access uri="https://savagebeast.com" subdomains="true" />
	<access uri="http://pandora.com" subdomains="true" />

	<feature id="car.theme" required="true" version="1.0.0.0"/>
	<feature id="blackberry.event" required="true" version="1.0.0"/>  
	<feature id="qnx.audioplayer" required="true" version="1.0.0"/>
	<feature id="qnx.mediasource" required="true" version="1.0.0"/>
	<feature id="qnx.medialibrary" required="true" version="1.0.0"/>
	<feature id="qnx.application.event" required="true" version="1.0.0.0"/>
	<feature id="qnx.radio" required="true" version="1.0.0"/>
	<feature id="qnx.sensors" required="true" version="1.0.0"/>
	<feature id="qnx.settings" required="true" version="1.0.0"/> 	
	<feature id="qnx.application.event" required="true" version="1.0.0"/>
</widget>