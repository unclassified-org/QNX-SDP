<Client>
	<DeviceId>
		<DisplayName>XBOX 360</DisplayName>
		<DeviceDescriptionRecognition>
			<DescriptionText>Xbox</DescriptionText>
		</DeviceDescriptionRecognition>
		<HttpRecognition>
			<HttpText>Xbox</HttpText>
		</HttpRecognition>
		<MappingUpdatePolicy>FIX</MappingUpdatePolicy>
	</DeviceId>
	<Capabilities>
		<Scaling>
			<Target>JPEG4096x4096</Target>
		</Scaling>
		<SupportedMediaProfiles>
			<Profile>LPCM</Profile>
			<Profile>WMV</Profile>
		</SupportedMediaProfiles>
	</Capabilities>
	<Adaptations>
		<DLNA>
			<PretendServer>WMC</PretendServer>
			<Version>DLNA15</Version>
			<DescriptionFile>devicedescription-xbox.xml</DescriptionFile>
		</DLNA>
		<MimeTranslations>
			<MimeTypeMapping>
				<In>audio/x-aiff</In>
				<Out>audio/aiff</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>video/x-msvideo</In>
				<Out>video/avi</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>audio/x-flac</In>
				<Out>audio/flac</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>audio/L16</In>
				<Out>audio/lpcm</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>audio/mp1</In>
				<Out>audio/mpeg</Out>
			</MimeTypeMapping>
			<MimeTypeMapping>
				<In>audio/x-mpeg</In>
				<Out>audio/mpeg</Out>
			</MimeTypeMapping>
				<MimeTypeSuppress>video/mpeg2</MimeTypeSuppress>
				<MimeTypeSuppress>audio/x-wav</MimeTypeSuppress>
				<MimeTypeSuppress>video/mpeg</MimeTypeSuppress>
				<MimeTypeSuppress>image/png</MimeTypeSuppress>
				<MimeTypeSuppress>image/bmp</MimeTypeSuppress>
				<MimeTypeSuppress>image/gif</MimeTypeSuppress>
				<MimeTypeSuppress>image/tiff</MimeTypeSuppress>
		</MimeTranslations>
	</Adaptations>
	<DeviceQuirks>
		<Quirk>FORCE_4TH_FIELD</Quirk>
		<Quirk>UNLIMITED</Quirk>
	</DeviceQuirks>
</Client>
